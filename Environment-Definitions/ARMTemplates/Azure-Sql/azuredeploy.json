{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2019-06-01-preview",
      "name": "[parameters('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]"
      },
      "resources": [
        {
          "type": "databases",
          "apiVersion": "2019-06-01-preview",
          "name": "[parameters('databaseName')]",
          "location": "[parameters('location')]",
          "properties": {
            "collation": "[parameters('collation')]",
            "maxSizeBytes": "[parameters('maxSizeBytes')]",
            "sku": {
              "name": "[parameters('skuName')]",
              "tier": "[parameters('skuTier')]"
            }
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('sqlServerName'))]"
          ]
        }
      ]
    }
  ],
  "parameters": {
    "sqlServerName": {
      "type": "string",
      "metadata": {
        "description": "The name of the SQL Server."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "West US",
      "metadata": {
        "description": "The location of the SQL Server and Database."
      }
    },
    "administratorLogin": {
      "type": "string",
      "metadata": {
        "description": "The administrator username for the SQL Server."
      }
    },
    "administratorLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The administrator password for the SQL Server."
      }
    },
    "databaseName": {
      "type": "string",
      "metadata": {
        "description": "The name of the SQL Database."
      }
    },
    "collation": {
      "type": "string",
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS",
      "metadata": {
        "description": "The collation of the SQL Database."
      }
    },
    "maxSizeBytes": {
      "type": "string",
      "defaultValue": "2147483648",
      "metadata": {
        "description": "The maximum size of the SQL Database in bytes."
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "S0",
      "metadata": {
        "description": "The SKU name for the SQL Database."
      }
    },
    "skuTier": {
      "type": "string",
      "defaultValue": "Standard",
      "metadata": {
        "description": "The pricing tier of the SQL Database."
      }
    }
  }
}
